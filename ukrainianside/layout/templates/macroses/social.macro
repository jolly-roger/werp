{% macro social(articleAlias) -%}
    {% if not currentUrl is none %}
        <table class="social-share">
            <tr>
                <td>Поделиться в </td>
                <td>
                    <a href="https://www.facebook.com/sharer/sharer.php?u={{getUrlByAlias(articleAlias)}}"
                       target="_blank"><div class="social share-btn fb-share-btn"></div></a>
                </td>
                <td >
                    <a href="https://plus.google.com/share?url={{getAliasUrlByAlias(articleAlias)}}"
                       target="_blank"><div class="social share-btn plus-share-btn"></div></a>
                </td>
                <td >
                    <a href="http://vkontakte.ru/share.php?url={{getUrlByAlias(articleAlias)}}"
                        target="_blank"><div class="social share-btn vk-share-btn"></div></a> 
                </td>
                <td >
                    <a href="http://www.odnoklassniki.ru/dk?st.cmd=addShare&st._surl={{getUrlByAlias(articleAlias)}}"
                        target="_blank"><div class="social share-btn od-share-btn"></div></a> 
                </td>
                <td >
                    <a href="http://twitter.com/intent/tweet?url={{getUrlByAlias(articleAlias)}}"
                        target="_blank"><div class="social share-btn tw-share-btn"></div></a> 
                </td>
            </tr>
        </table>
    {% endif %}
{%- endmacro %}
